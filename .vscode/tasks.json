{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": ".\\run.cmd"
            }
        },
        {
            "label": "exit",
            "type": "shell",
            "windows": {
                "command": "taskkill /F /IM qemu-system-x86_64.exe /T > nul"
            }
        },
        {
            "label": "run vbox",
            "type": "shell",
            "group": "build",
            "windows": {
                "command": ".\\run_vbox.cmd"
            },
            "problemMatcher": []
        }
    ]
}