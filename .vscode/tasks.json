{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "kill qemu",
            "type": "shell",
            "command": "pkill -f qemu 2> /dev/null",
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "revealProblems": "never",
                "reveal": "never",
                "panel": "dedicated",
                "echo": false,
                "close": true,
                "focus": false
            }
        },
        {
            "label": "run qemu (debug)",
            "type": "shell",
            "command": "sleep 1 && (qemu-system-x86_64 -d int -D qemu.log -smp 1 -M q35 -m 512M -drive file=./BonsOS.img,index=0,media=disk,format=raw -no-reboot -no-shutdown -S -gdb tcp::9000 | echo .)",
            "isBackground": true,
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "revealProblems": "never",
                "reveal": "silent",
                "panel": "dedicated",
                "echo": false,
                "close": true,
                "focus": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "compile"
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "compile",
            "command": "make",
            "presentation": {
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}