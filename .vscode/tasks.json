{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug qemu",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false
            },
            "windows": {
                "command": ".\\scripts\\run_qemu.cmd"
            },
            "linux": {
                "command": "./scripts/run_qemu.sh"
            }
        },
        {
            "label": "kill qemu",
            "type": "shell",
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
                "reveal": "never"
            },
            "windows": {
                "command": "taskkill /F /IM qemu-system-x86_64.exe /T > nul 2> nul"
            }
        },
        {
            "label": "run vmware",
            "type": "shell",
            "group": "build",
            "windows": {
                "command": ".\\scripts\\run_vmware.cmd"
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}