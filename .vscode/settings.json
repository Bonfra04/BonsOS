{
    "files.exclude": {
        // Git
        ".gitignore": true,
        ".gitattributes": true,
        ".gitmodules": true,

        // Output files and dirs
        "bin/": true,
        "bin-int/": true,
        "BonsOS.img": true,
        "BonsOS.hdd": true,
        "programs/*/obj/": true,

        // Tools
        "tools/": true,
        "dependencies.sh": true,

        // Docs
        "README.MD": true,
        "docs/": true,

        // Build files and dirs
        "scripts": true,
        "Makefile": true,
        "kernel/Makefile": true,
        "libc/Makefile": true,
        "libk/Makefile": true,
        "libusr/Makefile": true,
        "boot/Makefile": true,
        "boot/stage2/Makefile": true,
        "programs/Makefile": true,
        "programs/*/Makefile": true,

        "qemu.log": true,

        // Other VMs
        "vmware": true,
    },
    "git.ignoreLimitWarning": true,
    "debug.allowBreakpointsEverywhere": true,
    "files.associations": {
        "*.s": "nasm",
        "*.make": "makefile",
        "*.h": "c",
        "*.asm": "nasm"
    }
}