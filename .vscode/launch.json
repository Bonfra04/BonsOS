{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Qemu Debug - Kernel",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/bin/kernel/kernel.sys",
            "target": "tcp::9000",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "gdbpath": "gdb",
            "preLaunchTask": "run qemu (debug)",
            "postDebugTask": "stop qemu debug",
            "autorun": [    // path issues
                "set remotetimeout 35",
                "directory libk",
                "directory libc",
                "directory libusr",
                "directory kernel",
                "directory kernel/src",
                "set output-radix 16",
            ]
        },
        {
            "name": "Qemu Debug - Bootloader",
            "type": "gdb",
            "request": "attach",
            "target": "tcp::9000",
            "remote": true,
            "cwd": "${workspaceFolder}/boot/stage2",
            "gdbpath": "gdb",
            "preLaunchTask": "run qemu (debug)",
            "postDebugTask": "stop qemu debug",
            "autorun": [
                "set output-radix 16",
                "set remotetimeout 35",
                "add-symbol-file ${workspaceFolder}/bin/boot/loader.dbg"
                // "set architecture i386:x64-32",
            ]
        },
        {
            "name": "Qemu Debug - Init",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/img-content/bin/init.elf",
            "target": "tcp::9000",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "gdbpath": "gdb",
            "preLaunchTask": "run qemu (debug)",
            "postDebugTask": "stop qemu debug",
            "autorun": [    // path issues
                "add-symbol-file bin/kernel/kernel.sys",
                "set remotetimeout 15",
                "directory libk",
                "directory libc",
                "directory libusr",
                "directory kernel",
                "directory programs/init",
                "set output-radix 16"
            ]
        },
        {
            "name": "Qemu Debug - Desktop",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/img-content/bin/desktop.elf",
            "target": "tcp::9000",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "gdbpath": "gdb",
            "preLaunchTask": "run qemu (debug)",
            "postDebugTask": "stop qemu debug",
            "autorun": [    // path issues
                "add-symbol-file bin/kernel/kernel.sys",
                "set remotetimeout 15",
                "directory libk",
                "directory libc",
                "directory libusr",
                "directory kernel",
                "directory programs/desktop",
                "set output-radix 16"
            ]
        },
        {
            "name": "Qemu Debug - Taskbar",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/img-content/bin/taskbar.elf",
            "target": "tcp::9000",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "gdbpath": "gdb",
            "preLaunchTask": "run qemu (debug)",
            "postDebugTask": "stop qemu debug",
            "autorun": [    // path issues
                "add-symbol-file bin/kernel/kernel.sys",
                "set remotetimeout 15",
                "directory libk",
                "directory libc",
                "directory libusr",
                "directory kernel",
                "directory programs/taskbar",
                "set output-radix 16"
            ]
        }
    ],
}